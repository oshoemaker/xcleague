<div class="big-image" >
  <img src="/images/saddle.jpg" alt="" />

  <span>
    Saddle Mountain
  </span>
</div>


<div class="container content">
  <div class="row">
    <div class="col-md-6">
      <div class="headline"><h3>Site Info</h3></div>
      
      <h3>Launch</h4>
      Elevation:  2,300'<br/>
      Coordinates:  46.8175000, -119.8750000<br/>
      Wind Direction:  North<br/> 
      
      <h3>LZ</h3>
      Elevation: 750'<br/>
      Coordinates: 46.8291667, -119.8725000<br/>
      
    </div>
    <div class="col-md-6">
      <!-- Basic Map -->
      <div class="headline"><h3>Location</h3></div>
      <div id="map" class="map margin-bottom-50"></div>
      <!-- End Basic Map -->
      <button class="btn btn-default btn-block" style="margin-top: -40px">Show Waypoints</button>
    </div>
  </div>
  
  <div id="forecast" class="row">
    <div class="col-md-12">
      <div class="headline"><h3>Forecast</h3></div>
    </div>
    
    <div class="col-md-12">
      <iframe id="forecast_embed" type="text/html" frameborder="0" height="245" width="100%" src="https://forecast.io/embed/#lat=46.8175000&lon=-119.8750000&name=Saddle Mountain"> </iframe>
    </div>
    
    <div class="col-md-12 margin-bottom-20 too-wide">
      <h3>Blipspot (<span class="blipDate"></span>)</h3>
      <div id="blipspot"></div>
    </div>
    
    <div class="col-md-6">
      <div>
        <h3>MM5</h3>
        <select id="mm5hour" class="margin-bottom-20" placeholder="Select MM5 Hour...">
          <option selected></option>
          <option value="03">8a</option>
          <option value="06">11a</option>
          <option value="09" selected>2p</option>
          <option value="12">5p</option>
        </select>
        <img id="mm5" class="img-responsive center-block" src="/images/spinner.gif">
      </div>
    </div>
    <div class="col-md-6">
      <div>
        <h3>Windgram (<span class="blipDate"></span>)</h3>
        <img class="img-responsive" src="https:home.comcast.net/~wxtofly/SaddleO_windgram.png">
      </div>
    </div>
  </div>
  
  <div id="conditions" class="row">
    
    <div class="col-md-12">
      <div class="headline"><h3>Current Conditions</h3></div>
    </div>  
  
    <div class="col-md-6">
      <h3>Mattawa</h3>
      <img class="img-responsive" src="https://www.wunderground.com/cgi-bin/wxStationGraphAll?day={{day}}&amp;year={{year}}&amp;month={{month}}&amp;ID=MSDMW1&amp;type=3&amp;width=500&amp;showtemp=1&amp;showpressure=1&amp;showwind=1&amp;showwinddir=1&amp;showrain=1" alt="Current Winds from Tiger North Launch NWPG ">

    </div>
    
    <div class="col-md-6">
      <h3>Beverly</h3>
      <img class="img-responsive" src="https://www.wunderground.com/cgi-bin/wxStationGraphAll?day={{day}}&year={{year}}&month={{month}}&ID=MHBVLY&type=3&width=500&showtemp=1&showpressure=1&showwind=1&showwinddir=1&showrain=1" alt="Current Winds from Tiger North Launch NWPG ">
    </div>
    
  </div>
  
  
  <div style="display: none;">
    <iframe sandbox="allow-same-origin allow-scripts allow-popups allow-forms"
        src="https:home.comcast.net/~wxtofly/TigerWindgram.html"
        style="border: 0; width:0px; height:0px;">
    </iframe>
  </div>
</div>
